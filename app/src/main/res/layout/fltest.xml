<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent" 
    android:layout_height="fill_parent"
    android:orientation="vertical">

    <LinearLayout android:layout_weight="9"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <TextView android:id="@+id/txt_title" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp"
            android:text="@string/txt_title" >
        </TextView>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView android:id="@+id/txt_b" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="@string/str_b" >
            </TextView>

            <Button android:id="@+id/btn_b_d" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/str_d">
            </Button>

            <TextView android:id="@+id/txt_b_l" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/str_l" >
            </TextView>

            <TextView android:id="@+id/txt_b_value" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp" >
            </TextView>

            <Button android:id="@+id/btn_b_u" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/str_u">
            </Button>

        </LinearLayout>

        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView android:id="@+id/txt_r" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="@string/str_r" >
            </TextView>

            <Button android:id="@+id/btn_r_d" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/str_d">
            </Button>

            <TextView android:id="@+id/txt_r_l" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/str_l" >
            </TextView>

            <TextView android:id="@+id/txt_r_value" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp" >
            </TextView>

            <Button android:id="@+id/btn_r_u" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/str_u">
            </Button>

        </LinearLayout>


        <LinearLayout android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="3"
            android:orientation="horizontal">

            <TextView android:id="@+id/txt_g" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="30sp"
                android:text="@string/str_g" >
            </TextView>

            <Button android:id="@+id/btn_g_d" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/str_d">
            </Button>

            <TextView android:id="@+id/txt_g_l" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/str_l" >
            </TextView>

            <TextView android:id="@+id/txt_g_value" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:textSize="20sp" >
            </TextView>

            <Button android:id="@+id/btn_g_u" 
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" 
                android:layout_weight="1"
                android:textSize="20sp"
                android:text="@string/str_u">
            </Button>

        </LinearLayout>

        <Button android:id="@+id/btn_save_led" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content" 
            android:layout_weight="1"
            android:textSize="20sp"
            android:text="@string/save_led">
        </Button>

        <TextView android:id="@+id/txt_xxx" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textSize="30sp" >
            </TextView>
    </LinearLayout>
    
    <LinearLayout 
        android:layout_weight="1" 
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <include 
            layout="@layout/pass_fail" 
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom" 
        />

    </LinearLayout>

</LinearLayout>
