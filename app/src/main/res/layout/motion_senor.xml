<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/test_motionsenor"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:background="@color/white"
    android:orientation="vertical">

    <TextView
        android:id="@+id/ms_tv_motionsensorinfo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:text="@string/motionsensor_info"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/ms_tv_x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ms_tv_motionsensorinfo"
        android:text="@string/g_null_text"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/ms_tv_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ms_tv_x"
        android:text="@string/g_null_text"
        android:textSize="30sp"/>

    <TextView
        android:id="@+id/ms_tv_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_below="@+id/ms_tv_y"
        android:text="@string/g_null_text"
        android:textSize="30sp"/>

    <ImageView
        android:id="@+id/ms_arrow_down"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ms_draw_down"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/ms_arrow_up"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ms_draw_up"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/ms_arrow_left"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ms_draw_left"
        android:visibility="invisible"/>

    <ImageView
        android:id="@+id/ms_arrow_right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerInParent="true"
        android:src="@drawable/ms_draw_right"
        android:visibility="invisible"/>

    <TextView
        android:id="@+id/ms_pass"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/ms_arrow_down"
        android:text="@string/g_null_text"
        android:textSize="30sp"/>

    <include
        layout="@layout/pass_fail"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_gravity="bottom" />

</RelativeLayout>
